extends ../layouts/common
block content
  link(rel='stylesheet' type='text/css' href="/stylesheets/style.css")
  main
    h2 Oh hi,
    p 
    a.btn.btn-primary(href='/users/create', style='width:10%; margin-left: 50px') Add New User
    table.table
     thead.thead-dark
      tr
        th ID
        th Name
        th Username
        th Id Card
        th Date of birth
        th Gender
        th Phone
        th Address
        th Date In
        th
      
      each user in users
        tr 
          td= user.id
          td= user.name
          td= user.username
          td= user.idcard
          td= user.dateofbirth
          td= user.gender
          td= user.phone
          td= user.address
          td= user.datein
          td
            a.btn.btn-info(href='/users/'+ user.id) View