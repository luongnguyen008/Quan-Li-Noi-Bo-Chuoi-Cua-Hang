html
   head
    meta(charset='utf-8')
    title Welcome to my website!
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='A cool thing made with Glitch')
    link#favicon(rel='icon', href='/images/favicon-96x96.png', type='image/png')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
   body
      header
       nav.navbar.navbar-expand-lg.navbar-light.bg-light
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='') Users
          li.nav-item
            a.nav-link(href='/stores/'+ users[0].storeId +'/products') Products
          li.nav-item
            a.nav-link(href='/about') About
          form.form-inline.mt-0(action='/stores/'+ users[0].storeId +'/users/search', method='GET')
            input.form-control.mr-sm-2(type='search', name='q', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
          ul.navbar-nav.ml-auto
            li
              if user
               p.nav-link(href='#')= user.name
            li
              if !user
               a.btn.btn-primary(href='/auth/login') Login
      link(rel='stylesheet' type='text/css' href="/stylesheets/style.css")
      main
        h2 Oh hi,
        table.table
         thead.thead-dark
          tr
            th ID
            th Name
            th Username
            th Id Card
            th Date of birth
            th Gender
            th Phone
            th Address
            th Date In
            th
            th
            th
          
          each user in users
            tr 
              td= user.id
              td= user.name
              td= user.username
              td= user.idcard
              td= user.dateofbirth
              td= user.gender
              td= user.phone
              td= user.address
              td= user.datein
              td
                a.btn.btn-info(href='/stores/' + user.storeId + '/users/'+ user.id) View
              td
                a.btn.btn-primary(href='/stores/' + user.storeId + '/users/edit/'+ user.id ) Edit
              td
                a.btn.btn-danger(href='/stores/' + user.storeId + '/users/delete/'+ user.id) Delete
