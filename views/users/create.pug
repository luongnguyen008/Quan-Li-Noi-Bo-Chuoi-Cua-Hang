extends ../layouts/common
block content
	if errors
		each error in errors
			.alert.alert-danger= error
	h2.text-center Create User
	.container.mt-3
		form(action="/users/create", method="POST")
			.form-group
				label Username
				input.form-control.col-md-6(name='username', type='text', maxlength='100', value=values ? values.username : "")

			.form-group
				label Password
				input.form-control.col-md-6(name='password', type='password', maxlength='100', value=values ? values.password : "")

			.form-group
				label Name
				input.form-control.col-md-6(name='name', type='text', maxlength='100', value=values ? values.name : "")

			.form-group
				label Date of birth
				input.form-control.col-md-6(name='dateofbirth', type='date', maxlength='100', value=values ? values.dateofbirth : "")

			.form-group
				label Gender
				input.form-control.col-md-6(name='gender', type='text', maxlength='100', value=values ? values.gender : "")

			.form-group
				label Phone 
				input.form-control.col-md-6(name='phone', type='number', maxlength='100', value=values ? values.phone : "")

			.form-group
				label Identify Document
				input.form-control.col-md-6(name='idcard', type='text', maxlength='100', value=values ? values.idcard : "")

			.form-group
				label Address
				input.form-control.col-md-6(name='address', type='text', maxlength='100', value=values ? values.address : "")

			.form-group
				label Date In
				input.form-control.col-md-6(name='datein', type='date', maxlength='100', value=values ? values.datein : "")
			
			.form-group
				label Store Id
				input.form-control.col-md-6(name='storeId', type='text', maxlength='100', value=values ? values.storeId : "")

				br

				button.btn.btn-primary(type='submit') Add User

